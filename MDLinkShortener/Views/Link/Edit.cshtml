
@model MDLinkShortener.Models.Link
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Update", "Link", FormMethod.Post))
        {
            <input type="text" name="FullLink" value="@Model.FullLink" /> <br />
            @Html.HiddenFor(model => Model.ShortLink)
            @Html.HiddenFor(model => Model.Id)
            <button type="submit">Save</button>
        }
    </div>
</body>
</html>
